<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="UberTesters.XamarinForms.Common.UbertestersPage"
			 Title="Ubertesters Sample app Xamarin Forms">

  <Grid>
	<Grid.RowDefinitions>
	  <RowDefinition Height=".3333*" />
	  <RowDefinition Height="*" />
	  <RowDefinition Height="*" />
	  <RowDefinition Height="*" />
	  <RowDefinition Height="*" />
	  <RowDefinition Height="*" />
	</Grid.RowDefinitions>
 
	<Grid.ColumnDefinitions>
	  <ColumnDefinition Width="*" />
	  <ColumnDefinition Width="*" />
	  <ColumnDefinition Width="*" />
	</Grid.ColumnDefinitions>
 
	<Label 
		Grid.Row="0" Grid.Column="0"
		Text="Logger:"
	/>

	<Label 
		Grid.Row="1" Grid.Column="0"
		Text="Message:"
		VerticalOptions = "Center"
	/>
	<Entry
		Name="editMessage"
		Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"
		Text="message to be logged"
	>
	</Entry>

	<Button
		Grid.Row="2" Grid.Column="0" 
		Text="Info"
		Name="buttonInfo"
		Clicked="buttonInfo_Clicked"
	>
	Info
	</Button>
	<Button
		Grid.Row="2" Grid.Column="1" 
		Text="Warn"
		Name="buttonWarn"
		Clicked="buttonWarn_Clicked"
	>
	</Button>
	<Button
		Grid.Row="2" Grid.Column="2" 
		Text="Error"
		Name="buttonError"
		Clicked="buttonError_Clicked"
	>
	</Button>

	<Label 
		Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
		Text="Screenshots:"
		VerticalOptions = "Center"
	/>
	<Button
		Grid.Row="3" Grid.Column="2" 
		Text="Take Screenshot"
		Name="buttonScreenshotTake"
		Clicked="buttonScreenshotTake_Clicked"
	>
	</Button>

	<Label 
		Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2"
		Text="Ubertester page:"
		VerticalOptions = "Center"
	/>
	<Button
		Grid.Row="4" Grid.Column="2" 
		Text="Show"
		x:Name="buttonUbertestersPageShow"
		Clicked="buttonUbertestersPageShow_Clicked"
	>
	</Button>


	<Switch
		Grid.Row="5" Grid.Column="0" 
	/>
	<Switch
		Grid.Row="5" Grid.Column="2" 
	/>

	<!--
	<Label Text="Span two columns"
		   Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
		   TextColor="Blue"
		   BackgroundColor="Yellow"
		   XAlign="Center"
		   YAlign="Center" />
 
	<Label Text="Fixed 100x100"
		   Grid.Row="2" Grid.Column="2"
		   TextColor="Aqua"
		   BackgroundColor="Red"
		   XAlign="Center"
		   YAlign="Center" />
	-->
	  
  </Grid>
 
</ContentPage>

